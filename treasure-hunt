check_status() {
    if systemctl is-active --quiet treasure-hunt; then
        echo -e "${GREEN}Servis Ã‡ALIÅIYOR âœ“${NC}"
        echo "URL: http://$(hostname -I | awk '{print $1}'):5000"
    else
        echo -e "${RED}Servis Ã‡ALIÅMIYOR âœ—${NC}"
    fi
